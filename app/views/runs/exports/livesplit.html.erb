<?xml version="1.0" encoding="UTF-8"?>
<Run>
  <GameIcon />
  <GameName><%= @run.game %></GameName>
  <CategoryName><%= @run.category %></CategoryName>
  <Offset><%= Time.at(@run.offset || 0).utc.strftime("%H:%M:%S").strip %></Offset>
  <AttemptCount><%= @run.attempts || 0 %></AttemptCount>
  <RunHistory />
  <Segments>
  <% @run.segments.each do |segment| %>
    <Segment>
      <Icon />
      <Name><%= segment.name %></Name>
      <PersonalBestSplitTime><%= Time.at((segment.end_ms(Run::REAL) || 0) / 1000).utc.strftime("%H:%M:%S.%7N").strip %></PersonalBestSplitTime>
      <BestSegmentTime><%= Time.at((segment.shortest_duration_ms(Run::REAL) || 0) / 1000).utc.strftime("%H:%M:%S.%7N").strip %></BestSegmentTime>
      <SegmentHistory />
    </Segment>
  <% end %>
  </Segments>
</Run>
